  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abolkog/js-playground/issues"
  },
  "homepage": "https://github.com/abolkog/js-playground",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
