    "ts-loader": "^9.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.0",
    "webpack-merge": "^5.8.0"
  },
  "lint-staged": {
    "src/**/*.(jsx|js|ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
